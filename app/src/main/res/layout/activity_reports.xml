<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Income"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/incomePieChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewIncome" />





        <TextView
        android:id="@+id/tvIncomeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total : "
        android:layout_marginBottom="@dimen/_12sdp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginStart="16dp" />







    <TextView
        android:id="@+id/textViewExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/expensePieChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewExpense" />



    <TextView
        android:id="@+id/tvExpenseTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total Expense: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginStart="16dp" />





</LinearLayout>


    </ScrollView>

</LinearLayout>
