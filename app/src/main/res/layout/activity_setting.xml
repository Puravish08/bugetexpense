<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E06A3CD6">





        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/baseline_arrow_back_24"
            android:id="@+id/imgback"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Settings"
            android:textSize="@dimen/_18sdp"
            android:layout_gravity="center"
            />


        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/baseline_check_24"
            android:layout_marginLeft="@dimen/_42sdp"
            android:id="@+id/imgok"
            android:visibility="gone"
            />


    </androidx.appcompat.widget.Toolbar>



    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_12sdp"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:text="BACKUP SETTINGS"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/custom_color"
                android:fontFamily="@font/chrusty"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linetakedrive"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/takedrive"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_42sdp"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TAKE Drive Backups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/plisbold"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take Google Drive backup \nof data"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/plisbold"
                        />





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="@dimen/_8sdp"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/linerestoredrive"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/cloudcom"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_34sdp"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restore Drive Backups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/plisbold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Restore data from drive \nbackups"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/plisbold"
                        />





                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="@dimen/_8sdp"
                    />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_12sdp"
        android:layout_margin="@dimen/_8sdp"
        android:id="@+id/clearButton"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:text="CLEAR DATA"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/custom_color"
        android:fontFamily="@font/chrusty"

        />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/brush"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_28sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clear All Records"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/plisbold"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This wil clear your all income \nexpense entries"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/plisbold"
                        />





                </LinearLayout>


                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_marginTop="@dimen/_12sdp"
                    />

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>