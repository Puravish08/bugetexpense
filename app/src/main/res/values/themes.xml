<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BudgetExpenseManagerHelp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#E06A3CD6</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



        <style name="NeumorphicButtonStyle" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/neumorphic_button_background</item>
            <!-- Add more style attributes here as needed -->
        </style>



    <style name="CalendarViewStyle" parent="@android:style/Widget.CalendarView">
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
    </style>

    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">#BC6A3CD6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stFont">@font/chrusty</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stTextColor">@color/black</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/happyy</item>
        <item name="stIconEnd">@drawable/happyy</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">center</item> top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/custom_color</item> <!-- Customize the colorAccent to your desired color -->
    </style>


</resources>